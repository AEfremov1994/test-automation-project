{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    // allow importing files that end with .ts in import paths
    "allowImportingTsExtensions": true,

  // Prevent emitting JS files from tsc (we rely on Playwright's runtime)
  "noEmit": true,

    // Types to include (add node so Node built-ins are recognized)
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options (relaxed a bit to avoid cross-file conflicts)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options (relax to reduce noisy errors in mixed setups)
    "strict": false,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "noUncheckedSideEffectImports": false,
    "moduleDetection": "legacy",
    "skipLibCheck": true,

    // Helpful interoperability flags
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
    ,
    // Use legacy field emit so field initializers that reference `this` behave like constructor assignments
    "useDefineForClassFields": false
  },

  // Only type-check the source/test folders relevant to the project
  "include": [
    "tests",
    "page-objects",
    "utils",
    "playwright.config.ts",
    "globalSetup.ts",
    "*.ts"
  ],

  "exclude": [
    "node_modules",
    "playwright-report",
    "test-results",
    "**/*.spec.js"
  ]
}
